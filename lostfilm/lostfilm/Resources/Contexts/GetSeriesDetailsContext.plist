                                <string>all</string>
                                <key>regex</key>
                                <string>Официальный ?сайт: ?(.*?)$</string>
                            </dict>
                        </array>
                    </dict>
                    
                    <dict>
                        <key>name</key>
                        <string>seriesDescription</string>
                        <key>result</key>
                        <array>
                            <dict>
                                <key>xPath</key>
                                <string>//div[@class=&apos;text-block description&apos;]/div[@class=&apos;body&apos;]/div[@itemprop=&apos;description&apos;]</string>
                                <key>textType</key>
                                <string>raw</string>
                            </dict>
                        </array>
                    </dict>
                    
                </array>
            </dict>
            <!-- SERIES DETAILS === END -->
        
        </array>
    </dict>
