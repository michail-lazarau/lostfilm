<plist version="1.0">
<dict>
    <key>url</key>
    <string>https://www.lostfilm.tv/series/%@/video/%@/</string>
    <key>data</key>
    <array>
        <dict>
            <key>xPathRoot</key>
            <string>//div[@class=&apos;videos-block&apos;]/div[@class=&apos;video-block video_block&apos;]</string>
            <key>className</key>
            <string>LFVideoModel</string>
            <key>fields</key>
            <array>
                <dict>
                    <key>name</key>
                    <string>id</string>
                    <key>result</key>
                    <array>
                        <dict>
                            <key>xPath</key>
                            <string>//div[@class=&apos;play-btn&apos;]</string>
                            <key>attribute</key>
                            <string>data-id</string>
                        </dict>
                    </array>
                </dict>
                <dict>
                    <key>name</key>
                    <string>previewURL</string>
                    <key>result</key>
                    <array>
                        <dict>
                            <key>xPath</key>
                            <string>//img</string>
                            <key>attribute</key>
                            <string>src</string>
                            <key>formats</key>
                            <array>
                                <dict>
                                    <key>conditions</key>
                                    <array>
                                        <dict>
                                            <key>regex</key>
                                            <string>^http</string>
                                            <key>negative</key>
                                            <true/>
                                        </dict>
                                    </array>
                                    <key>format</key>
                                    <string>http:%@</string>
                                </dict>
                            </array>
                        </dict>
                    </array>
                </dict>
                <dict>
                    <key>name</key>
                    <string>title</string>
                    <key>result</key>
                    <array>
                        <dict>
                            <key>xPath</key>
                            <string>//div[@class=&apos;bottom-pane&apos;]/div[@class=&apos;title&apos;]</string>
                        </dict>
                    </array>
                </dict>
                <dict>
                    <key>name</key>
                    <string>details</string>
                    <key>result</key>
                    <array>
                        <dict>
                            <key>xPath</key>
                            <string>//div[@class=&apos;bottom-pane&apos;]/div[@class=&apos;description&apos;]</string>
                        </dict>
                    </array>
                </dict>
                <dict>
                    <key>name</key>
                    <string>videoURL</string>
                    <key>result</key>
                    <array>
                        <dict>
                            <key>xPath</key>
                            <string>//div[@class=&apos;play-btn&apos;]</string>
                            <key>attribute</key>
                            <string>data-src</string>
                        </dict>
                    </array>
                </dict>
            </array>
        </dict>
    </array>
</dict>
</plist>
